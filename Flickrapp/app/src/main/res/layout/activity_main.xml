<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="5dp" >

    <Button
        android:id="@+id/button_get_image"
        android:layout_width="178dp"
        android:layout_height="match_parent"
        android:text="@string/get_image" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_bar"
        android:text="cat"/>

    <Button
        android:id="@+id/button_sendToList"
        android:layout_width="178dp"
        android:layout_height="match_parent"
        android:text="@string/get_list" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/caching_images"
        />

    <CheckBox
        android:id="@+id/checkbox_caching"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/image_view_geo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/text_view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>